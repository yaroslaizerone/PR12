<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tried">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-33dp"></ImageView>

    <ImageView
        android:id="@+id/taxi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/taxi_pa"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="@+id/imageView2"></ImageView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/put"
        android:scaleX="-1"
        android:scaleY="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"></ImageView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="409dp"
        android:layout_height="253dp"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_bt"
        android:drawableTop="@drawable/rl"
        android:text="1.5 km"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView9"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_bt"
        android:drawableTop="@drawable/wait"
        android:text="5 min -free"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="@+id/imageView9"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_bt"
        android:drawableTop="@drawable/car"
        android:text="Kia Rio"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="@+id/imageView9"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="136dp"
        android:text="Prise:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView9"></TextView>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="101dp"
        android:layout_height="71dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_bt"
        android:orientation="vertical"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Minute"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:text="1 min - $1"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lsg"
        android:layout_width="101dp"
        android:layout_height="71dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_bt2"
        android:orientation="vertical"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Day"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="1440 min - $300"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="101dp"
        android:layout_height="71dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_bt2"
        android:orientation="vertical"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Hour"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="60 min - $50"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/bt1"
        android:layout_width="413dp"
        android:layout_height="57dp"
        android:background="@drawable/round_bt"
        android:text="BOOK"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>